@model InternetShop.Models.HomeWork
@{
    ViewData["Title"] = "Create";
}

<form method="post" asp-controller="HomeWork" asp-action="Create">
    <div class="border p-3">
        <div class="row">
            <h2 class="text-info p-lg-3">HomeWork</h2>
        </div>

        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Name"></label>
                    </div>
                    <div class="col-8">
                        <input class="w-100 form-control" asp-for="Name" />
                    </div>

                </div>
                </div>
                <br />
                <div class="form-group row">
                    <div class="col-8 offset-4 row">

                        <div class="col">
                            <input class="btn btn-info w-100" type="submit" value="Create" />
                        </div>
                        <div class="col">
                            <a class="btn btn-primary w-100" asp-action="Index">Back</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-4">
                @* Keep this empty *@
            </div>
        </div>

    </div>
</form>

