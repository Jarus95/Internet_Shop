@model IEnumerable<InternetShop.Models.HomeWork>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
   <div class="row pt-4">
        <div class="col-6">
          <h2 class="text-primary">HomeWork</h2>
        </div>

        <div class="col-6 text-end">
           <a class="btn btn-primary " asp-controller="HomeWork" asp-action="Create">
                Create New Category
           </a>
           
        </div>
   </div>

   <br /><br />
  @{
      if(Model.Count() > 0)
      {
          <table class="table table-bordered table-striped" style="width:100%">
              
          <thead>

                  <tr>
                     <th>
                         Id
                     </th>

                        <th>
                            Name
                        </th>
                        <th>
                          
                        </th>
                  
                  </tr>

          </thead>
          <tbody>
                   @foreach (var item in Model)
                    {
                        <tr>
                            <td width="30%">@item.Id</td>
                            <td width="50%">@item.Name</td>
                            <td class="text-center"> 
                                 <a asp-action="Edit" asp-route-id= "@item.Id" class="btn btn-info mx-2">Edit</a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                            </td>
                           


                        </tr>
                    }
          
          </tbody>
          </table>
      }

      else
      {
          <h2>Category is not exists</h2>
      }
  }
</div>

