@model InternetShop.Models.Category
@{
    ViewData["Title"] = "Create";
}

<form method="post" asp-controller="Category" asp-action="Create">
   <div class="border p-3">
       <div  class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="row">
            <h2 class="text-info p-lg-3">Add Category</h2>
        </div>

        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Name"></label>
                    </div>
                    <div class="col-8">
                       <input class="w-100 form-control" asp-for="Name"/>
                       <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="DisplayOrder"></label>
                    </div>
                    <div class="col-8">
                        <input class="w-100 form-control" asp-for="DisplayOrder" />
                        <span asp-validation-for="DisplayOrder" class="text-danger"></span>
                    </div>

                </div>
                <br />
                <div class="form-group row">
                    <div class="col-8 offset-4 row">

                        <div class="col">
                          <input  class="btn btn-info w-100" type="submit" value="Create"/>
                        </div>
                        <div class="col">
                            <a class="btn btn-primary w-100" asp-action="Index"><i class="fa-solid fa-right-from-bracket"></i>Back</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-4">
                @* Keep this empty *@
            </div>
        </div>
        
   </div>
</form>

@section Scripts{      @*client validation *@

    @{
    <partial name="_ValidationScriptsPartial" />
    }
}